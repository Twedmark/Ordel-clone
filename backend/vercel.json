{
  "version": 2,
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ],
  "functions": {
    "api/index.js": {
      "includeFiles": "history.json allowedGuesses.txt selectedWords.txt"
    }
  },
  "crons": [
    {
      "path": "/cron",
      "schedule": "0 4 * * *"
    }
  ]
}
